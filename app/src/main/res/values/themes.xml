<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Colley" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pearl</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/pearl</item>
        <!-- Customize your theme here. -->

<!--        bottomSheetDialogTheme-->
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.Colley.BottomSheetDialog</item>

    </style>

<!--    style to make shapeAbleImageView display round images-->
    <style name="RoundShapeAppearance" parent="">
        <item name="cornerSize">50%</item>
    </style>

<!--    style to remove list divider for menu groups in navigation view of drawerLayout-->
    <style name="NavigationViewTheme" >
        <item name="android:listDivider">@color/white</item>
    </style>

<!--    style for bottomSheetDialog -->
    <style name="ThemeOverlay.Colley.BottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
    </style>

</resources>