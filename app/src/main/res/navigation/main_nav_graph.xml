<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/schoolsFragment"
        android:name="com.colley.android.view.fragment.SchoolsFragment"
        android:label="Welcome"
        tools:layout="@layout/fragment_schools" >
        <action
            android:id="@+id/action_findYourSchoolFragment_to_signupFragment"
            app:destination="@id/signupFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.colley.android.view.fragment.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_groupChatFragment"
            app:destination="@id/groupMessageFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.colley.android.view.fragment.SettingsFragment"
        android:label="@string/menu_item_settings_title"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.colley.android.view.fragment.ProfileFragment"
        android:label="@string/menu_item_profile_title"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/signupFragment"
        android:name="com.colley.android.view.fragment.SignupFragment"
        android:label="@string/sign_up_label"
        tools:layout="@layout/fragment_signup" >
        <argument
            android:name="schoolName"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.colley.android.view.fragment.LoginFragment"
        android:label="@string/login_label"
        tools:layout="@layout/fragment_login" />
    <fragment
        android:id="@+id/contactUsFragment"
        android:name="com.colley.android.view.fragment.ContactUsFragment"
        android:label="@string/contact_us_label"
        tools:layout="@layout/fragment_contact_us" />
    <fragment
        android:id="@+id/FAQSFragment"
        android:name="com.colley.android.view.fragment.FAQSFragment"
        android:label="@string/faqs_label"
        tools:layout="@layout/fragment_faqs" />
    <fragment
        android:id="@+id/policyFragment"
        android:name="com.colley.android.view.fragment.PolicyFragment"
        android:label="@string/policy_label"
        tools:layout="@layout/fragment_policy" />
    <fragment
        android:id="@+id/notificationsFragment"
        android:name="com.colley.android.view.fragment.NotificationsFragment"
        android:label="@string/notifications_label"
        tools:layout="@layout/fragment_notifications" />
    <fragment
        android:id="@+id/rateAppFragment"
        android:name="com.colley.android.view.fragment.RateUsFragment"
        android:label="@string/rate_app_label"
        tools:layout="@layout/fragment_rate_app" />
    <fragment
        android:id="@+id/groupMessageFragment"
        android:name="com.colley.android.view.fragment.GroupMessageFragment"
        tools:layout="@layout/fragment_group_message" >
        <argument
            android:name="groupId"
            app:argType="string" />
        <action
            android:id="@+id/action_groupChatFragment_to_groupInfoFragment"
            app:destination="@id/groupInfoFragment" />
    </fragment>
    <fragment
        android:id="@+id/groupInfoFragment"
        android:name="com.colley.android.view.fragment.GroupInfoFragment"
        android:label="Group Info"
        tools:layout="@layout/fragment_group_info" >
        <argument
            android:name="groupId"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/privateChatsFragment"
        android:name="com.colley.android.view.fragment.ChatsFragment"
        android:label="Messages"
        tools:layout="@layout/fragment_private_chats" >
        <action
            android:id="@+id/action_privateMessagesFragment_to_privateChatFragment"
            app:destination="@id/privateMessageFragment" />
    </fragment>
    <fragment
        android:id="@+id/privateMessageFragment"
        android:name="com.colley.android.view.fragment.PrivateMessageFragment"
        tools:layout="@layout/fragment_private_message">
        <argument
            android:name="chateeId"
            app:argType="string" />
        <action
            android:id="@+id/action_privateMessageFragment_to_chateeInfoFragment"
            app:destination="@id/chateeInfoFragment" />
    </fragment>
    <fragment
        android:id="@+id/chateeInfoFragment"
        android:name="com.colley.android.view.fragment.ChateeInfoFragment"
        tools:layout="@layout/fragment_chatee_info">
        <argument
            android:name="chateeId"
            app:argType="string" />
    </fragment>
</navigation>