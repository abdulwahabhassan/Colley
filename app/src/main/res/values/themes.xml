<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Colley" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pearl</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_pearl</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/pearl</item>
        <!-- Customize your theme here. -->

<!--    custom bottomSheetDialogTheme-->
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.Colley.BottomSheetDialog</item>
<!--    to allow action mode visually overtakes the action bar position-->
        <item name="windowActionModeOverlay">true</item>
<!--     custom theme for action mode-->
        <item name="actionModeTheme">@style/Base.Widget.AppCompat.ActionMode</item>

    </style>

<!--    custom style for ActionMode theme-->
    <style name="Base.Widget.AppCompat.ActionMode" parent="">
        <item name="background">@color/pearl</item>
        <item name="height">@dimen/height_50dp</item>
        <item name="actionModeCloseDrawable">@drawable/ic_arrow_back</item>
        <item name="titleTextStyle">@style/ActionModeTitleTextStyle</item>
    </style>

<!--    custom text style for ActionMode theme style-->
    <style name="ActionModeTitleTextStyle">
        <item name="android:textColor">@color/apricot</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ColorOnSecondaryFab">
        <item name="colorOnSecondary">@color/apricot</item>
    </style>

<!--    style to make shapeAbleImageView display round images-->
    <style name="RoundShapeAppearance" parent="">
        <item name="cornerSize">50%</item>
    </style>

<!--    style postModel picture-->
    <style name="CurvedEdgedShapeAppearance" parent="">
        <item name="cornerSize">10%</item>
    </style>

    <style name="messageImageCornerRadius" parent="">
        <item name="cornerSize">3%</item>
    </style>

    <!--    style to remove list divider for menu groups in navigation view of drawerLayout and to set
        colorControlHighlight to white-->
    <style name="NavigationViewTheme" >
        <item name="android:listDivider">@color/white</item>
        <item name="colorControlHighlight">@android:color/transparent</item>
    </style>

<!--    style for bottomSheetDialog -->
    <style name="ThemeOverlay.Colley.BottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/bottomSheetDialogBackground</item>

    </style>

    <!--    style bottomSheetDialog background with the specified custom background-->
    <style name="bottomSheetDialogBackground"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_dialog_background</item>
    </style>

    <style name="ThemeOverlay_Toolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <!-- color used by navigation icon and overflow icon -->
        <item name="colorOnPrimary">@color/white</item>
    </style>

<!--    override tool bar title text size-->
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

<!--    override tab layout tab text size-->
    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">13sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

<!--    shape appearance for group photo-->
    <dimen name="height_50dp">50dp</dimen>
</resources>