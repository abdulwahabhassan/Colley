<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Colley" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pearl</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_pearl</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/pearl</item>
        <!-- Customize your theme here. -->

<!--        bottomSheetDialogTheme-->
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.Colley.BottomSheetDialog</item>

    </style>

<!--    style to make shapeAbleImageView display round images-->
    <style name="RoundShapeAppearance" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="messageImageCornerRadius" parent="">
        <item name="cornerSize">3%</item>
    </style>

    <style name="CornerRadius8dp" parent="">
        <item name="cornerSize">10%</item>
    </style>

<!--    style to remove list divider for menu groups in navigation view of drawerLayout and to set
        colorControlHighlight to white-->
    <style name="NavigationViewTheme" >
        <item name="android:listDivider">@color/white</item>
        <item name="colorControlHighlight">@android:color/transparent</item>
    </style>

<!--    style for bottomSheetDialog -->
    <style name="ThemeOverlay.Colley.BottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="ThemeOverlay_Toolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <!-- color used by navigation icon and overflow icon -->
        <item name="colorOnPrimary">@color/white</item>
    </style>

</resources>